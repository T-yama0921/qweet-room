<div class="header">
  <div class="inner-header">
    <h1 class="title">
     Qweet Room
    </h1>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to '新規投稿', new_tweet_path, class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="main">
  <% @tweets.each do |tweet|%>
    <div class="question-wrap">
      <div class="question">
        <%=link_to tweet.question, tweet_path(tweet.id) %>
      </div>
      <ul class="choices">
        <li class="choice"><%= tweet.answer %></li>
        <li class="choice"><%= tweet.first_incorrection %></li>
        <li class="choice"><%= tweet.second_incorrection %></li>
      </ul>
      <div class="nickname">
        <%= tweet.user.nickname %>
      </div>
    </div>
  <%end%>
</div>