<div class="header">
  <div class="inner-header">
    <h1 class="title">
     Qweet Room
    </h1>
    <ul class='btn-lists'>
      <% if user_signed_in? %>
        <li class="button"><%= link_to current_user.nickname, "#", class: "left-btn" %></li>
        <li class="button"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "right-btn" %></li>
      <% else %>
        <li class="button"><%= link_to 'ログイン', new_user_session_path, class: "left-btn" %></li>
        <li class="button"><%= link_to '新規登録', new_user_registration_path, class: "right-btn" %></li>
      <% end %>
    </ul>
  </div>
</div>
<div class="main">
  <div class="new-post">
    <%= link_to "クイズを投稿する", new_tweet_path, class: "new-post-btn" %>
  </div>
  <div class="pickup-questions">
    <h3 class="pickup-label">ピックアップクイズ</h3>
    <div class="random-question">
      <% @random.each do |quiz| %>
        <div class="question-box">
          <div class="question-initial">Ｑ．</div>
          <div class="question-text">
            <%= link_to quiz.question,tweet_path(quiz.id) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="new-post-questions">
    <h3 class="new-post-label">新規投稿クイズ</h3>
    <% @tweets.each do |tweet|%>
      <div class="question-wrap">
        <div class="user">
          <h3 class="nickname">
            <%= tweet.user.nickname %>
          </h3>
          <div class="tweet-btn">
            <% if user_signed_in? && tweet.user_id == current_user.id %>
              <%= link_to "編集", edit_tweet_path(tweet.id), method: :get, class: "tweet-edit-btn" %>
              <%= link_to "削除", tweet_path(tweet.id), method: :delete, class:"tweet-destroy-btn" %>
            <% end %>
          </div>
        </div>
        <div class="question-box">
          <div class="question-initial">Ｑ．</div>
          <div class="question-text">
            <%=link_to tweet.question, tweet_path(tweet.id) %>
          </div>
        </div>
        <div class="posted-date">
          <%= l tweet.created_at %>
        </div>
      </div>
    <%end%>
  </div>
</div>